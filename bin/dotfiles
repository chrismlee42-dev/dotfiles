#/usr/bin/env bash

set -e

command="${1}"

shift

case "${command}" in
    "install")
        package="${1}"
        echo "Installing package: ${package}"
        (cd "${DOTFILES_LOCATION}/${package}" && ./install.sh)
        echo "\n"
        ;;
    *)
        echo "${command} not implemented"
    exit 1
        ;;
esac
